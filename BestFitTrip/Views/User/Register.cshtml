@model BestFitTrip.ViewModels.RegisterUserViewModel


<h1>Register</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username"/>
        <span asp-validation-for="Username" style="color: red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email"/>
        <span asp-validation-for="Email" style="color: red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password"/>
        <span asp-validation-for="Password" style="color: red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Verify"></label>
        <input class="form-control" asp-for="Verify"/>
        <span asp-validation-for="Verify" style="color: red"></span>
    </div>

     
    <input type="submit" value="Register" />
    
</form>